<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/image_albums_item1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <ImageView
            android:id="@+id/image_albums_item2"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"

            app:layout_constraintLeft_toRightOf="@id/image_albums_item1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_albums_item1" />

        <ImageView
            android:id="@+id/image_albums_item3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"

            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@id/image_albums_item1"
            app:layout_constraintRight_toLeftOf="@id/image_albums_item4"
            app:layout_constraintLeft_toLeftOf="@id/image_albums_item2"
            app:layout_constraintBottom_toBottomOf="@id/image_albums_item1"
            />

        <ImageView
            android:id="@+id/image_albums_item4"
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:scaleType="centerCrop"
            app:layout_constraintLeft_toRightOf="@id/image_albums_item3"

            app:layout_constraintRight_toRightOf="@id/image_albums_item2"
            app:layout_constraintBottom_toBottomOf="@id/image_albums_item3"
            />

        <TextView
            android:id="@+id/more_photo_album"
            android:layout_width="75dp"
            android:layout_height="75dp"

            app:layout_constraintTop_toTopOf="@id/image_albums_item4"
            app:layout_constraintLeft_toLeftOf="@id/image_albums_item4"
            app:layout_constraintBottom_toBottomOf="@id/image_albums_item4"
            app:layout_constraintRight_toRightOf="@id/image_albums_item4"

            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:gravity="center" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="HELLO"/>

</LinearLayout>

